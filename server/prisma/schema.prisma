generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Address {
  id    Int     @default(autoincrement()) @id
  userId  Int?
  name  String
  fullAddress  String
  comments  String?
}

enum OrderStatus {
  active
  completed
  canceled
}

model Order {
  id    Int     @default(autoincrement()) @id
  status OrderStatus @default(active)
  serviceName String
  totalPrice Int
  fullAddress String
  date Int
  userId Int?
}